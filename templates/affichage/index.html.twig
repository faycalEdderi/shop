{% extends 'parent.html.twig' %}

{% block title %}Hello AffichageController!{% endblock %}

{% block body %}
 <div class="row mt-3">
        <div class="col">
            <h1>Produits</h1>
         <div class="row">
        {% for vetement in results %}
         

         <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100">
            <a href="#"><img src="{{ asset('img/' ~ vetement.image) }}" alt=""></a>
          <div class="card-body">
            <h4 class="card-title">
              <a href="#"> {{ vetement.name | capitalize}} </a>
            </h4>
            <h5>{{ vetement.price | capitalize}} </h5>
            <p class="card-text">{{ vetement.description | capitalize}} </p>
          </div>
          <div class="card-footer">
            <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
          </div>
        </div>
      </div>
                
            {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
